<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_loginform"
    tools:context=".Assignment_1.Task_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:fontFamily="@font/kaushan_script"
            android:text="zinenic"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="430dp">

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:autofillHints="emailAddress"
            android:drawableStart="@drawable/baseline_email_24"
            android:ems="12"
            android:hint="Email Adress"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:shadowColor="#000000"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="300dp">

        <EditText
            android:id="@+id/editTextTextPassword"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:autofillHints="password"
            android:drawableStart="@drawable/baseline_lock_24"
            android:ems="12"
            android:hint="************"
            android:inputType="textPassword"
            android:paddingStart="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:shadowColor="#000000"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="170dp">

        <Button
            android:id="@+id/button"
            android:layout_width="303dp"
            android:layout_height="69dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowColor="@color/white"
            android:text="Sign Up"
            android:textColor="#077347"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="530dp"
        android:layout_marginBottom="130dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="Forget Password?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginTop="660dp"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/button7"
            android:layout_width="302dp"
            android:layout_height="82dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/baseline_person_search_24"
            android:fontFamily="@font/open_sans"
            android:text="  Facebook"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck,VisualLintButtonSize,VisualLintBounds" />

        <Button
            android:id="@+id/button9"
            android:layout_width="302dp"
            android:layout_height="82dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/baseline_person_pin_circle_24"
            android:fontFamily="@font/open_sans"
            android:text="  Twitter"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            tools:ignore="TextSizeCheck,VisualLintButtonSize,VisualLintBounds" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>